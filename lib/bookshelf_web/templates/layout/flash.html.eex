<%= if get_flash(@conn, :info) do %>
<p class="border rounded border-blue-500 bg-blue-100 text-blue-500 px-4 py-2" role="alert">
  <%= get_flash(@conn, :info) %>
</p>
<% end %>

<%= if get_flash(@conn, :error) do %>
<p class="border border-red-500 bg-red-100 text-red-500 p-4" role="alert">
  <%= get_flash(@conn, :error) %>
</p>
<% end %>
